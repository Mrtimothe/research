#include <iostream>
using namespace std;

int main()

{
    int age=0;
    
    cout << "enter your age\n";
    cin >> age;
    
    if (age<18&&age>4) {age=16;}
    
    if (age<65&&age>20) {age=21;}
    
    if (age<21&&age>17) {age=18;}
    
    if (age<80&&age>64) {age=65;}
    
    if (age>79) {age=80;}
    
    if (age<5) {age=4;}
    
    switch (age){
            
        case 18:
            cout << "adult discount admission £20\n";
            break;
            
        case 21:
            cout << "adult full admission £25\n";
            break;
            
        case 65:
            cout << "senior discount admission £10\n";
            break;
            
        case 16:
            cout << "child under 18 admission £7.50\n";
            break;
        
            case 80:
            cout << "admission free \n";
            break;
            
        case 4:
            cout << "we dont admit chidren under 5 as they are a nuisance\n";
            break;
            
        default:
            cout << "please refer to booking office\n";
            
            
    }
    
    return 0;
}
