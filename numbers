#include <iostream>
using namespace std;






int main()

{
    
  
    
    // creates initial variables x and y
    
    int  number =0;
    
    int x =0 , y =0;
    
    // this prints hello then asks the user to think of a number
    
    cout << "hello world \n\n";
    cout << "please think of a number \n\n";
    cout << "\nNB: the number should be less than 1000  \n\n";
    cin >> number;
    
    // this line reminds the user that the number can not be larger than a certain number , which is set at 1000 intially
    
    cout << "\n\ni think the number you chose is "; cout << number; cout << " \n\nis that correct ?\n\n";
    
    cout << "enter x value  ";
    cin >> x;
    
    cout << "\n\nenter y value  ";
    cin >> y;
    
    cout << "\n\ncurrently\n\nx="; cout << x;  cout << "\n\nand\n\ny=";cout << y; cout <<"\n\n";

    int sum =x+y;
    
    cout << "the sum of these numbers is ="; cout << sum; cout <<"\n\n";
    
    return 0;
}
